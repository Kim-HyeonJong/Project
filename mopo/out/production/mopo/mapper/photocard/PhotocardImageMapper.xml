<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bit.mopo.mapper.PhotocardImageMapper">
    <!-- 이미지 등록 -->
    <insert id="insert" parameterType="PhotocardImageDto" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO photocard_image
        (photocard_id, image_url, sort_order)
        VALUES
        (#{photocardId}, #{imageUrl}, #{sortOrder})
    </insert>

    <!-- 해당 포토카드 이미지 가져오기 -->
    <select id="selectByPhotocardId" parameterType="int" resultType="PhotocardImageDto">
        SELECT *
        FROM photocard_image
        WHERE photocard_id = #{photocardId}
        ORDER BY sort_order ASC
    </select>

    <update id="updateImageUrl" parameterType="PhotocardImageDto">
        UPDATE photocard_image
        SET image_url = #{imageUrl}
        WHERE id = #{id}
    </update>

    <!-- 이미지 삭제 (포토카드 기준) -->
    <delete id="deleteByPhotocardId" parameterType="int">
        DELETE FROM photocard_image
        WHERE photocard_id = #{photocardId}
    </delete>
</mapper>